local DiscordLib = loadstring(game:HttpGet"https://raw.githubusercontent.com/dawid-scripts/UI-Libs/main/discord%20lib.txt")()
local window = DiscordLib:Window("BBS GUI V6.9")
local server = window:Server("Main Functions","")
local channel = server:Channel("Mining Stuff")

channel:Dropdown("Ores Options",{"BigCopperOre","Ore2","Ore3"},function(bool)
	if {"BigCopperOre"} then
		while {"BigCopperOre"} do
			wait()
			local A_1 = game:GetService("Workspace").Ores.BigCopperOre
			local Event = game:GetService("ReplicatedStorage").RemoteEvents.Mine
			Event:FireServer(A_1)
		end
	end
	if {"Ore2"} then
		while {"Ore2"} do
			wait()
		end
	end
end)
channel:Seperator()
