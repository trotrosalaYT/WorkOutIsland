local DiscordLib = loadstring(game:HttpGet"https://raw.githubusercontent.com/dawid-scripts/UI-Libs/main/discord%20lib.txt")()
local window = DiscordLib:Window("BBS GUI V6.9")
local server = window:Server("Main Functions","")
local channel = server:Channel("Mining Stuff")

channel:Toggle("Auto Mine BigCopperOre",function(bool)
	if _G.bco == true then
		_G.bco = false
	else
		_G.bco = true
	end
	while _G.bco do
		wait()
		local A_1 = game:GetService("Workspace").Ores.BigCopperOre
		local Event = game:GetService("ReplicatedStorage").RemoteEvents.Mine
		Event:FireServer(A_1)
	end
end)
channel:Button("Upgrade Pickaxe +1",function()
	DiscordLib:Notification("Succesfully Updgraded Pickaxe","","Ok")
	if _G.up1 == true then
		_G.up1 = false
	else
		_G.up1 = true
	end
	while _G.up1 do
		wait()
		local Event = game:GetService("ReplicatedStorage").RemoteEvents.UpgradePickaxe
		Event:FireServer()
	end
end)
channel:Seperator()
